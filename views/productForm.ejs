<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <title>New product</title>
</head>
<body>
  <h1>New product</h1>
  <form method="post">
    <label>Serial number(XX0000): <input type="text" name="serial" value="<%=serial%>" maxlength="6" required pattern="^[a-zA-Z]{2}[0-9]{4}$"></label>
    <label>Condition: <select name="condition">
      <option value="perfect">perfect</option>
      <option value="damaged">damaged</option>
    </select></label>
    <label>Name: <input type="text" name="name" value="<%=name%>" minlength="3" required></label>
    <%errors.forEach((msg) => {%>
      <p class="errorMessage"><%= msg %></p>
    <%})%>
    <input type="submit" value="Add">
  </form>
  <%products.forEach((product) => {
    console.log(products)
    %>
    <p><%=`${product.serial} - ${product.condition} - ${product.name}`%></p>
  <%})%>
</body>
</html>
